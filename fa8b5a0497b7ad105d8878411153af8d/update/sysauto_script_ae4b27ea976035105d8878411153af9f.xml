        <script><![CDATA[var when_close = gs.getProperty("autoCloseOverdue");

var needit_record = new GlideRecord("x_960166_need_it_needit");
needit_record.addQuery('when_needed','<',gs.daysAgo(when_close));
needit_record.addQuery('state!=3');
needit_record.query();

while(needit_record.next()){
	gs.info("Auto closed needit task record = " + needit_record.number);
	needit_record.work_notes = "Record closed because it was too past for when needed";
	
	needit_record.state = 4 ;
	needit_record.update();
	
	
}]]></script>
