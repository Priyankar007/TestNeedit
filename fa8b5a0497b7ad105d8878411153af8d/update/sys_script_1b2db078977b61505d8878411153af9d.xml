        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	
	var leadTime = GlideApplicationProperty.getValue('x_960166_need_it.advanceNoticeDays');
	
	var needed = new GlideDateTime(current.when_needed);
	needed.addDaysUTC(-leadTime);
	var final_date = needed.getDate();
	
	
	
	var when_needed = new NeedItUtils();
	var date_val = when_needed.dateValidation(final_date);
	
	
	if(date_val == true){
		gs.addErrorMessage("date cannot be in past , record not saved");
		current.setAbortAction(true);
	}
	
	//var today = now_date.getLocalDate();
	//var one_ahead = when_needed.getLocalDate();
	
	
	var check_date = when_needed.isToday(current.when_needed);
	
	if(check_date == true){
		gs.addErrorMessage("please select date prior to 24 hour");
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
